<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/radio_checkbox_left_padding"
        tools:context="com.example.android.quizapp.Fragment1">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:onClick="onCheckBoxClicked"
            android:text="Question"
            android:textAlignment="center"
            android:textSize="@dimen/question_font_size"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:onClick="onCheckBoxClicked"
            android:paddingLeft="@dimen/radio_checkbox_left_padding"
            android:text="Answer 1"
            android:textSize="@dimen/answer_font_size"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:onClick="onCheckBoxClicked"
            android:paddingLeft="@dimen/radio_checkbox_left_padding"
            android:text="Answer 2"
            android:textSize="@dimen/answer_font_size"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:onClick="onCheckBoxClicked"
            android:paddingLeft="@dimen/radio_checkbox_left_padding"
            android:text="Answer 3"
            android:textSize="@dimen/answer_font_size"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:onClick="onCheckBoxClicked"
            android:paddingLeft="@dimen/radio_checkbox_left_padding"
            android:text="Answer 4"
            android:textSize="@dimen/answer_font_size"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/answer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:onClick="onCheckBoxClicked"
            android:paddingLeft="@dimen/radio_checkbox_left_padding"
            android:text="Answer 5"
            android:textSize="@dimen/answer_font_size"
            android:textColor="@color/colorText"    />

    </LinearLayout>
</ScrollView>